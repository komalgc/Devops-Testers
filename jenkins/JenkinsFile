pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    args '-v $PWD:/go -e GOCACHE=/go/.cache'
                    reuseNode true
                }
            }
            steps {
                script {
                    dir('bugtracker-backend') {
                        sh 'mkdir -p .cache && go test -v ./...'
                    }
                }
            }
        }
    }
}
