pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = "${env.WORKSPACE}/.cache"  // Store Go cache in workspace
            }
            steps {
                script {
                    dir('bugtracker-backend') {
                        sh '''
                          mkdir -p $GOCACHE
                          go test -v ./...
                        '''
                    }
                }
            }
        }


        stage('Unit Tests - Frontend') {
            agent {
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
         
            steps {
                script {
                    dir('bugtracker-frontend') {
                        sh '''
                          npm ci
                          npm test 
                        '''
                    }
                }
            }
        }
    }
}
