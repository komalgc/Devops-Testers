pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'golang:1.21-alpine'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = "${env.WORKSPACE}/.cache"  // Store Go cache in workspace
            }
            steps {
                script {
                    dir('bugtracker-backend') {
                        sh '''
                          mkdir -p $GOCACHE
                          go test -v ./...
                        '''
                    }
                }
            }
        }
    }
}
